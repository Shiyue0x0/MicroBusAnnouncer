    <!--  路线站点卡  -->
    <androidx.cardview.widget.CardView
        android:id="@+id/lineStationCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingBottom="12dp"

        android:visibility="invisible"
        app:cardBackgroundColor="?attr/cardBackgroundColor"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@+id/headerNew">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lineStationList"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="12dp" />

    </androidx.cardview.widget.CardView>

    <!-- 头牌 新 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="?attr/cardBackgroundColor"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@+id/bar"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="horizontal">

            <com.microbus.announcer.HeaderTextView
                android:id="@+id/headerLeftNew"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/cardBackgroundColor"
                android:text="@string/main_staring_station_name"
                android:textColor="@color/textColor2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.microbus.announcer.HeaderTextView
                android:id="@+id/headerMiddleNew"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/cardBackgroundColor"
                android:maxWidth="80dp"
                android:text="@string/main_line_0"
                android:textColor="@color/textColor1"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.microbus.announcer.HeaderTextView
                android:id="@+id/headerRightNew"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?attr/cardBackgroundColor"
                android:text="@string/main_terminal_name"
                android:textColor="@color/textColor2"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <!--  控制栏与日志  -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/terminalCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"

                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    app:cardCornerRadius="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to" />

                        <com.microbus.announcer.ScrollingTextView
                            android:id="@+id/terminalName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:gravity="center"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:text="@string/main_to_station_name"
                            android:textColor="@color/textColor1"
                            android:textSize="@dimen/middleFontSize"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"

                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"

                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    app:cardCornerRadius="24dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/currentStationState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/next" />

                        <com.microbus.announcer.ScrollingTextView
                            android:id="@+id/currentStationName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"

                            android:gravity="center"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:text="@string/main_next_station_name"
                            android:textColor="@color/textColor1"
                            android:textSize="@dimen/middleFontSize"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="12dp"

                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    app:cardCornerRadius="24dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_distance_title" />

                            <TextView
                                android:id="@+id/currentDistanceToCurrentStationUnit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_distance_unit"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <com.microbus.announcer.ScrollingTextView
                            android:id="@+id/currentDistanceToCurrentStationValue"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:gravity="center"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:text="@string/main_distance_value"
                            android:textColor="@color/textColor1"
                            android:textSize="@dimen/middleFontSize"
                            android:textStyle="bold" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"

                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="?attr/cardBackgroundColor"
                    app:cardCornerRadius="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_speed_title" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_speed_unit"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <com.microbus.announcer.ScrollingTextView
                            android:id="@+id/speedValue"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:gravity="center"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:text="@string/main_speed_value"
                            android:textColor="@color/textColor1"
                            android:textSize="@dimen/middleFontSize"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/locationSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/switch_location"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="8dp"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchFollowLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/switch_follow_location"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/lineDirectionSwitch"
                        app:layout_constraintStart_toEndOf="@+id/locationSwitch"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="8dp"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchMap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/switch_map"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/lineDirectionSwitch"
                        app:layout_constraintStart_toEndOf="@+id/locationSwitch"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="8dp"/>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/lineDirectionSwitch"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/up_line"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"

                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/startingStation"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_button"
                    android:contentDescription="@string/starting_station"
                    android:src="@drawable/baseline_start_24" />

                <ImageButton
                    android:id="@+id/lastStation"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_button"
                    android:contentDescription="@string/last_station"
                    android:padding="8dp"
                    android:src="@drawable/baseline_keyboard_arrow_left_24" />

                <ImageButton
                    android:id="@+id/voiceAnnouncement"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_button"
                    android:contentDescription="@string/announce_current_station"
                    android:padding="8dp"
                    android:src="@drawable/baseline_notifications_24" />

                <ImageButton
                    android:id="@+id/nextStation"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_button"
                    android:contentDescription="@string/next_station"
                    android:padding="8dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24" />

                <ImageButton
                    android:id="@+id/terminal"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_rectangle_button"
                    android:contentDescription="@string/terminal"
                    android:src="@drawable/baseline_start_24" />

            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"

                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/cardBackgroundColor"
                app:cardCornerRadius="24dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/lineStationChangeInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--            <TextView-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="0dp"-->
            <!--                app:layout_constraintTop_toBottomOf="@id/location_info_card" />-->

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/mapLocation"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        android:contentDescription="@string/now_location"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/map_location_button"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollView2"
        app:layout_constraintStart_toStartOf="@id/mapContainer" />

    <ImageView
        android:id="@+id/runningInfo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        android:contentDescription="@string/running_info"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/list"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollView2"
        app:layout_constraintEnd_toEndOf="parent" />


    <!--    <SeekBar-->
    <!--        android:id="@+id/seekBar2"-->
