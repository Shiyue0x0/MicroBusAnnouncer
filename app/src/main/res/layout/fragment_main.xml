<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragment.MainFragment">

    <!--  地图  -->
    <com.microbus.announcer.view.Container
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.amap.api.maps.MapView>

    </com.microbus.announcer.view.Container>

    <!--  状态栏填充  -->
    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- 电显 新 -->
    <!--    app:cardBackgroundColor="?attr/cardBackgroundColor"-->

    <LinearLayout
        android:id="@+id/topFill"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/bar" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/an_contain_bg"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@+id/topFill"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--            app:background="?attr/cardBackgroundColor"-->
            <com.microbus.announcer.view.ESView
                android:id="@+id/headerLeftNew"
                android:layout_width="0dp"
                android:layout_height="20sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/main_staring_station_name"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                app:background="@color/an_contain_bg" />


            <com.microbus.announcer.view.ESView
                android:id="@+id/headerMiddleNew"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:maxWidth="80dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:text="@string/main_line_0"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                app:background="@color/md_theme_surface"
                app:cornerRadius="16dp" />

            <com.microbus.announcer.view.ESView
                android:id="@+id/headerRightNew"
                android:layout_width="0dp"
                android:layout_height="20sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/main_terminal_name"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                app:background="@color/an_contain_bg" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/fill2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/headerNew" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/lineStationCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="invisible"
        app:cardBackgroundColor="@color/an_contain_bg"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@+id/fill2"
        app:strokeWidth="0dp">

        <com.microbus.announcer.view.NestedScrollableHost
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            app:sameDirectionWithParent="true">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lineStationList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.microbus.announcer.view.NestedScrollableHost>


    </com.google.android.material.card.MaterialCardView>


    <!--  控制栏与日志  -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bottomFill">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/terminalCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/an_contain_bg"
                    app:cardCornerRadius="24dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/terminalTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to" />

                        <com.microbus.announcer.view.ScrollingTextView
                            android:id="@+id/terminalName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:gravity="center"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:text="@string/main_to_station_name"
                            android:textColor="@color/md_theme_onSurface"
                            android:textSize="@dimen/middleFontSize"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/currentStationCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/an_contain_bg"
                    app:cardCornerRadius="24dp"

                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/currentStationState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/next" />

                        <com.microbus.announcer.view.ScrollingTextView
                            android:id="@+id/currentStationName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:gravity="center"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:text="@string/main_next_station_name"
                            android:textColor="@color/md_theme_onSurface"
                            android:textSize="@dimen/middleFontSize"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/currentDistanceToCurrentStationCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/an_contain_bg"
                    app:cardCornerRadius="24dp"

                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/main_distance_title" />

                            <TextView
                                android:id="@+id/currentDistanceToCurrentStationUnit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="@string/main_distance_unit"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <com.microbus.announcer.view.ScrollingTextView
                            android:id="@+id/currentDistanceToCurrentStationValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:gravity="center"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:text="@string/main_distance_value"
                            android:textColor="@color/md_theme_onSurface"
                            android:textSize="@dimen/middleFontSize"
                            android:textStyle="bold" />


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/speedCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/an_contain_bg"
                    app:cardCornerRadius="24dp"

                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/speedTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_speed_title" />

                            <TextView
                                android:id="@+id/speedUnit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_speed_unit"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <com.microbus.announcer.view.ScrollingTextView
                            android:id="@+id/speedValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:gravity="center"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:singleLine="true"
                            android:text="@string/main_speed_value"
                            android:textColor="@color/md_theme_onSurface"
                            android:textSize="@dimen/middleFontSize"
                            android:textStyle="bold" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp"
                app:cardBackgroundColor="@color/an_contain_bg"
                app:cardCornerRadius="24dp"
                app:strokeWidth="0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/locationBtnGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/locationBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/switch_location"
                            app:icon="@drawable/location_on" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>


                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/mapBtnGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/mapBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/switch_map"

                            app:icon="@drawable/map" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/lineDirectionBtnGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/lineDirectionBtnUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="0dp"
                            android:text="@string/up_line" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/lineDirectionBtnDown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="0dp"
                            android:text="@string/down_line" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:orientation="horizontal">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/startingStation"
                    style="?attr/materialIconButtonFilledStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/starting_station"
                    app:backgroundTint="@color/md_theme_surface"
                    app:icon="@drawable/start"
                    app:iconGravity="textTop"
                    app:iconTint="@color/md_theme_primary"
                    app:materialSizeOverlay="@style/SizeOverlay.Material3Expressive.Button.IconButton.Small.Wide" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/lastStation"
                    style="?attr/materialIconButtonFilledStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/last_station"
                    app:backgroundTint="@color/md_theme_surface"
                    app:icon="@drawable/arrow_left"
                    app:iconGravity="textTop"
                    app:iconTint="@color/md_theme_primary"
                    app:materialSizeOverlay="@style/SizeOverlay.Material3Expressive.Button.IconButton.Small.Wide" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/voiceAnnouncement"
                    style="?attr/materialIconButtonFilledStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/announce_current_station"
                    app:backgroundTint="@color/md_theme_surface"
                    app:icon="@drawable/notifications"
                    app:iconGravity="textTop"
                    app:iconTint="@color/md_theme_primary"
                    app:materialSizeOverlay="@style/SizeOverlay.Material3Expressive.Button.IconButton.Small.Wide" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/nextStation"
                    style="?attr/materialIconButtonFilledStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:contentDescription="@string/next_station"
                    app:backgroundTint="@color/md_theme_surface"
                    app:icon="@drawable/arrow_right"
                    app:iconGravity="textTop"
                    app:iconTint="@color/md_theme_primary"
                    app:materialSizeOverlay="@style/SizeOverlay.Material3Expressive.Button.IconButton.Small.Wide" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/terminal"
                    style="?attr/materialIconButtonFilledStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/terminal"
                    app:backgroundTint="@color/md_theme_surface"
                    app:icon="@drawable/start"
                    app:iconGravity="textTop"
                    app:iconTint="@color/md_theme_primary"
                    app:materialSizeOverlay="@style/SizeOverlay.Material3Expressive.Button.IconButton.Small.Wide" />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"

                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"

                app:cardCornerRadius="24dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/lineStationChangeInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="12dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/bottomFill"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mapLocation"
        style="?attr/materialIconButtonFilledStyle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/starting_station"
        app:backgroundTint="@color/md_theme_surface"
        app:icon="@drawable/location"
        app:iconGravity="textTop"
        app:iconTint="@color/md_theme_primary"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollView2"
        app:layout_constraintStart_toStartOf="@id/mapContainer"
        app:materialSizeOverlay="@style/SizeOverlay.Material3Expressive.Button.IconButton.Small.Wide" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/finishEditLine"
        style="?attr/materialIconButtonFilledStyle"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/starting_station"
        android:visibility="gone"
        app:backgroundTint="@color/md_theme_surface"
        app:icon="@drawable/finish"
        app:iconGravity="textTop"
        app:iconTint="@color/md_theme_primary"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollView2"
        app:layout_constraintStart_toEndOf="@+id/mapLocation"
        app:materialSizeOverlay="@style/SizeOverlay.Material3Expressive.Button.IconButton.Small.Wide" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/runningInfo"
        style="?attr/materialIconButtonFilledStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/starting_station"
        app:backgroundTint="@color/md_theme_surface"
        app:icon="@drawable/list"
        app:iconGravity="textTop"
        app:iconTint="@color/md_theme_primary"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollView2"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/serviceBtn"
        style="?attr/materialIconButtonFilledStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:contentDescription="@string/starting_station"
        app:backgroundTint="@color/md_theme_surface"
        app:icon="@drawable/service"
        app:iconGravity="textTop"
        app:iconTint="@color/md_theme_primary"
        app:layout_constraintBottom_toTopOf="@+id/nestedScrollView2"
        app:layout_constraintEnd_toStartOf="@+id/runningInfo" />

</androidx.constraintlayout.widget.ConstraintLayout>
