<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragment.MainFragment">

    <!--  地图  -->
    <com.microbus.announcer.view.Container
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.amap.api.maps.MapView>

    </com.microbus.announcer.view.Container>

    <!--  状态栏填充  -->
    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/topFill"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/bar" />

    <!-- 电显 新 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/an_contain_bg"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@+id/topFill"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--            app:background="?attr/cardBackgroundColor"-->
            <com.microbus.announcer.view.ESView
                android:id="@+id/headerLeftNew"
                android:layout_width="0dp"
                android:layout_height="20sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/main_staring_station_name"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                app:background="@color/an_contain_bg" />


            <com.microbus.announcer.view.ESView
                android:id="@+id/headerMiddleNew"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:maxWidth="80dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                android:text="@string/main_line_0"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                app:background="@color/md_theme_surface"
                app:cornerRadius="16dp" />

            <com.microbus.announcer.view.ESView
                android:id="@+id/headerRightNew"
                android:layout_width="0dp"
                android:layout_height="20sp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/main_terminal_name"
                android:textColor="@color/md_theme_onSurface"
                android:textSize="20sp"
                android:textStyle="bold"
                app:background="@color/an_contain_bg" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:id="@+id/fill2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/headerNew" />


    <!-- 巡航信息栏 新 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/navCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible"
        app:cardBackgroundColor="@color/an_contain_bg"
        app:cardCornerRadius="24dp"
        app:layout_constraintTop_toBottomOf="@+id/fill2"
        app:strokeWidth="0dp">

        <LinearLayout
