        <com.microbus.announcer.view.ScrollingTextView
            android:id="@+id/stationEnName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/station_en_name_value"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/station_type_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/station_name_split"
            app:layout_constraintTop_toTopOf="@+id/station_type_card" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stationLineList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fadingEdgeLength="20dp"
            android:requiresFadingEdge="horizontal"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/station_type_card" />

        <!--        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

