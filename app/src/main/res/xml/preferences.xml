<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="系统">
        <EditTextPreference
            app:defaultValue=""
            app:key="defaultLineName"
            app:title="默认路线"
            app:useSimpleSummaryProvider="true" />
        <DropDownPreference
            android:entries="@array/lang_entries"
            android:entryValues="@array/lang_values"
            app:defaultValue="auto"
            app:key="lang"
            app:summary="%s"
            app:title="界面语言" />
        <EditTextPreference
            app:defaultValue="桂林"
            app:key="city"
            app:title="搜索城市"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="showBottomBar"
            app:title="导航栏"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="notice"
            app:title="运行通知"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="地图">
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="clickMapToCopyLngLat"
            app:title="点击地图复制经纬度"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="clickMapToAddStation"
            app:title="点击地图添加站点"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="clickLocationButtonToCopyLngLat"
            app:title="点击定位按钮复制经纬度"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="lineTrajectoryCorrection"
            app:title="线路轨迹纠偏（Beta）"
            app:useSimpleSummaryProvider="true" />
        <DropDownPreference
            android:entries="@array/mapStationShowType_entries"
            android:entryValues="@array/mapStationShowType_values"
            app:defaultValue="1"
            app:key="mapStationShowType"
            app:summary="%s"
            app:title="地图站点显示方式" />
        <EditTextPreference
            app:defaultValue="10"
            app:key="autoFollowNavigationWhenAboveSecond"
            app:title="超过秒数自动跟随定位"
            app:useSimpleSummaryProvider="true" />
        <DropDownPreference
            android:entries="@array/mapType_entries"
            android:entryValues="@array/mapType_values"
            app:defaultValue="0"
            app:key="mapType"
            app:summary="%s"
            app:title="地图模式" />
    </PreferenceCategory>

    <PreferenceCategory app:title="定位">
        <EditTextPreference
            app:defaultValue="30"
            app:key="arriveStationDistance"
            app:title="站点判定距离（米）"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:defaultValue="2500"
            app:key="locationInterval"
            app:title="定位间隔（毫秒）"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="highPrecisionLocation"
            app:summary="重启生效"
            app:title="开启高精度定位"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="findAllLineStation"
            app:title="寻访路线中所有站点"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="AutoSwitchLineDirection"
            app:title="自动切换路线方向"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

    <PreferenceCategory app:title="电显">
        <EditTextPreference
            app:defaultValue="5"
            app:key="lineHeadCardChangeTime"
            app:title="电显刷新间隔（秒）"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:defaultValue="全国文明城市 桂林欢迎您"
            app:key="welInfoLeft"
            app:title="电显左侧欢迎信息"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:defaultValue="攻坚十四五 奋进新征程 建设壮美广西"
            app:key="welInfoRight"
            app:title="电显右侧欢迎信息"
            app:useSimpleSummaryProvider="true" />
        <MultiSelectListPreference
            android:entries="@array/headSignShowInfo_entries"
            android:entryValues="@array/headSignShowInfo_values"
            app:defaultValue="@array/headSignShowInfo_values"
            app:key="headSignShowInfo"
            app:summary="重启生效"
            app:title="电显显示信息" />
    </PreferenceCategory>

    <PreferenceCategory app:title="播报">
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="stationChangeVibrator"
            app:title="进出站振动提醒"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="useTTS"
            app:title="使用TTS"
            app:useSimpleSummaryProvider="true" />

        <Preference
            android:defaultValue="Default"
            app:key="announcementLibrary"
            app:summary=""
            app:title="播报语音库" />
    </PreferenceCategory>

    <PreferenceCategory app:title="下一站播报格式">

        <EditTextPreference
            app:key="DefaultNextAnnouncementExpression"
            app:title="默认"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="StartingNextAnnouncementExpression"
            app:title="起点站"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="SecondNextAnnouncementExpression"
            app:title="第二站"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="TerminalNextAnnouncementExpression"
            app:title="终点站"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="即将进站播报格式">

        <EditTextPreference
            app:key="DefaultWillArriveAnnouncementExpression"
            app:title="默认"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="StartingWillArriveAnnouncementExpression"
            app:title="起点站"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="SecondWillArriveAnnouncementExpression"
            app:title="第二站"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="TerminalWillArriveAnnouncementExpression"
            app:title="终点站"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="进站播报格式">

        <EditTextPreference
            app:key="DefaultArriveAnnouncementExpression"
            app:title="默认"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="StartingArriveAnnouncementExpression"
            app:title="起点站"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="SecondArriveAnnouncementExpression"
            app:title="第二站"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            app:key="TerminalArriveAnnouncementExpression"
            app:title="终点站"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="数据">
        <Preference
            android:key="backupStationAndLine"
            android:title="备份站点与路线"
            app:summary="路径：Announcer/Backups" />
        <Preference
            android:key="restoreStation"
            android:title="还原站点" />
        <Preference
            android:key="restoreLine"
            android:title="还原路线" />
        <Preference
            android:key="loadPresetStationData"
            android:title="加载预设站点数据" />
        <Preference
            android:key="loadPresetLineData"
            android:title="加载预设路线数据" />
        <Preference
            android:key="searchStationNotHaveVoice"
            android:title="搜索暂无报站音频的站点" />
    </PreferenceCategory>

    <PreferenceCategory app:title="关于">

        <Preference
            android:icon="@mipmap/an_round"
            android:key="about"
            android:summary=""
            android:title="@string/app_name" />
        <Preference
            android:icon="@drawable/github"
            android:key="projectUrl"
            android:summary="Github"
            android:title="项目地址" />
        <Preference
            android:key="author"
            android:summary="Shiyue"
            android:title="联系作者" />

    </PreferenceCategory>

</PreferenceScreen>